<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="worksheet_time_and_material_hide_tables"
          inherit_id="industry_fsm_sale.worksheet_time_and_material">
      <!-- üîπ Encabezado: Unit Price -->
    <xpath expr="//table[hasclass('o_main_table')]//th[@t-if='not hide_price and final_subtotal != 0 or is_any_total_discount_line']"
           position="attributes">
        <attribute name="style">display:none;</attribute>
    </xpath>

    <!-- üîπ Encabezado: Taxes -->
    <xpath expr="//table[hasclass('o_main_table')]//th[@t-if='not hide_price and final_tax']"
           position="attributes">
        <attribute name="style">display:none;</attribute>
    </xpath>

    <!-- üîπ Encabezado: Amount -->
    <xpath expr="//table[hasclass('o_main_table')]//th[@t-if='not hide_price']"
           position="attributes">
        <attribute name="style">display:none;</attribute>
    </xpath>

    <!-- üîπ Celda cuerpo: Precio unitario -->
    <xpath expr="//table[hasclass('o_main_table')]//td[@t-if='not hide_price']"
           position="attributes">
        <!-- Forzamos a que nunca se pinte -->
        <attribute name="t-if">False</attribute>
    </xpath>

    <!-- üîπ Celda cuerpo: Impuestos -->
    <xpath expr="//table[hasclass('o_main_table')]//td[@t-if='not hide_price and final_tax']"
           position="attributes">
        <attribute name="t-if">False</attribute>
    </xpath>

    <!-- üîπ Celda cuerpo: Importe (total de l√≠nea) -->
    <xpath expr="//table[hasclass('o_main_table')]//td[hasclass('o_price_total')]"
           position="attributes">
        <attribute name="t-if">False</attribute>
    </xpath>

    <!-- Ocultar tabla de totales -->
    <xpath expr="//div[@name='so_total_summary']//table" position="attributes">
        <attribute name="style">display:none;</attribute>
    </xpath>

     <!-- üîπ Leyenda de pol√≠ticas de colocaci√≥n debajo de la tabla -->
    <xpath expr="//table[hasclass('o_main_table')]" position="after">
        <t t-if="doc.company_id.fs_installation_policy">
            <div class="mt-3">
                <strong>Pol√≠ticas de colocaci√≥n</strong>
                <p t-out="doc.company_id.fs_installation_policy"
                    style="white-space: pre-line;"/>
            </div>
        </t>
    </xpath>

    
</template>
</odoo>
