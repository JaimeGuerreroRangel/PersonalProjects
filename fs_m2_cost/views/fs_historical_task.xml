<?xml version="1.0" encoding="UTF-8"?>
<data>
    <record id="view_task_kpi_tree" model="ir.ui.view">
        <field name="name">task.kpi.tree</field>
        <field name="model">task.kpi</field>
        <field name="arch" type="xml">
            <list string="Historial KPI de Tareas">
                <field name="task_id"/>
                <field name="change_date"/>
                <field name="user_id"/>
                <field name="previous_status"/>
                <field name="current_status"/>
                <field name="reason"/>
                <field name="reschedule_date"/>
                <field name="change_count"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_task_kpi_form" model="ir.ui.view">
        <field name="name">task.kpi.form</field>
        <field name="model">task.kpi</field>
        <field name="arch" type="xml">
            <form string="Detalle KPI de tarea">
                <sheet>
                    <group>
                        <field name="task_id"/>
                        <field name="change_date"/>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="previous_status"/>
                        <field name="current_status"/>
                        <field name="change_count"/>
                    </group>
                    <group>
                        <field name="reason"/>
                        <field name="reschedule_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_task_kpi" model="ir.actions.act_window">
        <field name="name">KPI de Tareas</field>
        <field name="res_model">task.kpi</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Historial de cambios de estatus en las tareas de Field Service.</p>
        </field>
    </record>

    <!-- MENÚ (debajo de Proyecto → Reportes, por ejemplo) -->
      <menuitem id="menu_task_kpi_root"
                name="KPI de Tareas"
                parent="industry_fsm.fsm_menu_reporting"
                action="action_task_kpi"
                sequence="90"
    />

</data>
