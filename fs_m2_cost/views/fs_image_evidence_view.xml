<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <!-- Vista Kanban para imágenes -->
    <record id="view_fsm_task_image_kanban" model="ir.ui.view">
        <field name="name">fsm.task.image.kanban</field>
        <field name="model">fsm.task.image</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="image"/>
                <field name="name"/>
                <field name="create_date"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click" style="position: relative;">
                            <div class="o_kanban_image" style="height: 200px; overflow: hidden; border-radius: 8px;">
                                <field name="image" 
                                       widget="image" 
                                       options="{'size': [200, 200]}"
                                       style="width: 100%; height: 100%; object-fit: cover;"/>
                            </div>
                            <div class="oe_kanban_details p-2">
                                <div class="o_kanban_record_title">
                                    <strong t-if="record.name.raw_value">
                                        <field name="name"/>
                                    </strong>
                                    <em t-else="" class="text-muted">Sin descripción</em>
                                </div>
                                <div class="o_kanban_record_bottom text-muted small mt-1">
                                    <i class="fa fa-calendar" title="Fecha de creación"/> <field name="create_date" widget="date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vista Form -->
    <record id="view_fsm_task_image_form" model="ir.ui.view">
        <field name="name">fsm.task.image.form</field>
        <field name="model">fsm.task.image</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" 
                           widget="image" 
                           class="oe_avatar"
                           options="{'preview_image': 'image', 'size': [400, 400]}"/>
                    <group>
                        <field name="name" 
                               string="Descripción"
                               placeholder="Descripción de la evidencia..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista Tree -->
    <record id="view_fsm_task_image_tree" model="ir.ui.view">
        <field name="name">fsm.task.image.tree</field>
        <field name="model">fsm.task.image</field>
        <field name="arch" type="xml">
            <list default_order="sequence,id">
                <field name="sequence" widget="handle"/>
                <field name="image" 
                       widget="image" 
                       options="{'preview_image': 'image', 'size': [64, 64]}"/>
                <field name="name"/>
                <field name="create_date" widget="date"/>
            </list>
        </field>
    </record>
    
    <!-- Herencia en project.task -->
    <record id="view_project_task_form_fsm_images" model="ir.ui.view">
        <field name="name">project.task.form.fsm.images</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Evidencia fotográfica">
                    <field name="fsm_image_ids" 
                           nolabel="1"
                           mode="kanban"
                           context="{'default_task_id': id}"/>
                </page>
            </xpath>
        </field>
    </record>
    
</odoo>
