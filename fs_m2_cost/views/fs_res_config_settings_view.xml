<?xml version="1.0" encoding="UTF-8"?>
<data noupdate="1">
    <record id="view_res_config_settings_fs_coordinators" model="ir.ui.view">
        <field name="name">res.config.settings.view.fs.coordinators</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="industry_fsm.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- Insertar un nuevo bloque dentro del app de Field Service -->
            <xpath expr="//app[@name='industry_fsm']" position="inside">
                <block title="Coordinadores Field Service" id="fs_coordinators_block">

                    <setting string="Coordinador colocación" invisible="1"
                             help="Usuario por defecto para tareas de instalación.">
                        <field name="fs_coordinator_installation_id"/>
                    </setting>

                    <setting string="Coordinador nivelación" invisible="1"
                             help="Usuario por defecto para tareas de nivelación.">
                        <field name="fs_coordinator_leveling_id"/>
                    </setting>

                    <setting string="Coordinador evaluación" invisible="1"
                             help="Usuario por defecto para tareas de evaluación.">
                        <field name="fs_coordinator_evaluator_id"/>
                    </setting>

                    <setting string="Coordinadores colocación"
                            help="Usuarios para tareas de instalación.">
                        <field name="fs_coordinator_installation_ids" widget="many2many_tags"
                        options="{'no_create': True, 'no_open': True}"/>
                    </setting>
                    <setting string="Coordinadores nivelación"
                            help="Usuarios para tareas de nivelación.">
                        <field name="fs_coordinator_leveling_ids" widget="many2many_tags"
                        options="{'no_create': True, 'no_open': True}"/>
                    </setting>
                    <setting string="Coordinadores evaluación"
                            help="Usuarios para tareas de evaluación.">
                        <field name="fs_coordinator_evaluator_ids" widget="many2many_tags"
                        options="{'no_create': True, 'no_open': True}"/>
                    </setting>

                    

                </block>

                 <block title="Categorias de Aprobación" id="fs_approval_block">

                    <setting string="Categoria de aprobación"
                             help="Categoria aprobaciónde Viaticos.">
                        <field name="fs_travel_approval_category_id"/>
                    </setting>
                </block>

                <block title="Datos de comisión" id="fs_comision_block">

                    <setting string="Diario de comisión"
                             help="Diario contable para registrar las comisiones de los colaboradores .">
                        <field name="fs_commission_journal_id"/>
                    </setting>

                    <setting string="Servicio de comisión"
                             help="Producto servicio para registrar las comisiones de los colaboradores.">
                        <field name="fs_commission_product_id"/>
                    </setting>
                    
                </block>

                <block title="Parametros de Tolerancia" id="fs_tolerancia_block">

                    <setting string="Tolerancia llegada (minutos)"
                             help="Minutos de tolerancia para registrar llegadas a tareas de Field Service.">
                        <field name="fs_arrival_tolerance_minutes"/>
                    </setting>
                    
                </block>

                <block title="Politicas de servicio" id="fs_politics_block">

                    <setting string="Politicas de colocación"
                             help="Leyenda que se imprime en el reporte del cliente.">
                        <field name="fs_installation_policy"/>
                    </setting>
                    
                </block>
            </xpath>

        </field>
    </record>
</data>
