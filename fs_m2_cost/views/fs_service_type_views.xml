<?xml version="1.0" encoding="utf-8"?>
<data noupdate="1">
    <record id="view_field_service_type_tree" model="ir.ui.view">
        <field name="name">field.service.type.list</field>
        <field name="model">field.service.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="sequence_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_field_service_type_form" model="ir.ui.view">
        <field name="name">field.service.type.form</field>
        <field name="model">field.service.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="sequence_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_field_service_type" model="ir.actions.act_window">
        <field name="name">Tipos de servicio FS</field>
        <field name="res_model">field.service.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Configura los tipos de servicio de Field Service y su secuencia.</p>
        </field>
    </record>

    <!-- Menú en configuración de Field Service (ajusta el parent si es necesario) -->
    <menuitem id="menu_field_service_type"
              name="Tipos de servicio"
              parent="menu_field_service_config"
              action="action_field_service_type"
              sequence="50"/>
</data>
