<?xml version="1.0" encoding="utf-8"?>
<data noupdate="1">
    <record id="view_field_service_rate_list" model="ir.ui.view">
        <field name="name">field.service.rate.list</field>
        <field name="model">field.service.rate</field>
        <field name="arch" type="xml">
            <list>
                <field name="service_id"/>
                <field name="tab_m2"/>
                <field name="tarifa_a"/>
                <field name="tarifa_b"/>
                <field name="tiempo_tabulado"/>
            </list>
        </field>
    </record>

    <record id="view_field_service_rate_form" model="ir.ui.view">
        <field name="name">field.service.rate.form</field>
        <field name="model">field.service.rate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="service_id"/>
                        <field name="tab_m2"/>
                    </group>
                    <group>
                        <field name="tarifa_a"/>
                        <field name="tarifa_b"/>
                    </group>
                    <group>
                        <field name="tiempo_tabulado"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_field_service_rate" model="ir.actions.act_window">
        <field name="name">Tabulador de servicios</field>
        <field name="res_model">field.service.rate</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_field_service_rate"
              name="Tabulador"
              parent="menu_field_service_config"
              action="action_field_service_rate"
              sequence="20"/>
</data>
