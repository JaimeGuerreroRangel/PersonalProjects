<!-- fs_m2_cost/wizard/fs_arrival_kpi_wizard_view.xml -->
<odoo>
    <record id="view_fs_arrival_kpi_wizard_form" model="ir.ui.view">
        <field name="name">fs.arrival.kpi.wizard.form</field>
        <field name="model">fs.arrival.kpi.wizard</field>
        <field name="arch" type="xml">
            <form string="KPI Llegadas Field Service">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="user_ids"
                               widget="many2many_tags"
                               domain="[('share','=',False)]"/>
                    </group>
                </group>
                <footer>
                    <button string="Exportar a Excel"
                            type="object"
                            name="action_export_excel"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fs_arrival_kpi_wizard" model="ir.actions.act_window">
        <field name="name">KPI Llegadas Field Service</field>
        <field name="res_model">fs.arrival.kpi.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_fs_arrival_kpi_report"
              name="KPI de llegadas"
              parent="industry_fsm.fsm_menu_reporting"
              action="action_fs_arrival_kpi_wizard"/>
</odoo>
