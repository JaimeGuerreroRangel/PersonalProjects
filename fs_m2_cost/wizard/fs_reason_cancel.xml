<?xml version="1.0" encoding="utf-8"?>
<data>
    <record id="view_task_kpi_reason_wizard_form" model="ir.ui.view">
        <field name="name">task.kpi.reason.wizard.form</field>
        <field name="model">task.kpi.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Motivo de cambio">
                <group>
                    <field name="action_type" readonly="1"/>
                    <field name="task_id" readonly="1"/>
                    <field name="reason" required="1"/>
                    <field name="reschedule_date"
                           invisible="action_type != 'reprogram'"/>
                </group>
                <footer>
                    <button string="Confirmar"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</data>
