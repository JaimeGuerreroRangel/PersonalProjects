<?xml version="1.0" encoding="utf-8"?>
<data>

    <record id="fs_timesheet_report_line_tree" model="ir.ui.view">
        <field name="name">fs.timesheet.report.line.tree</field>
        <field name="model">fs.timesheet.report.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="fs_sequence"/>
                <field name="product_code"/>
                <field name="unit_rate"/>
                <field name="qty_m2"/>
                <field name="pending_m2" readonly="1"/>
                <field name="fs_m2_cost"/>
            </list>
        </field>
    </record>

    <!-- Form del wizard -->
    <record id="fs_timesheet_report_wizard_view" model="ir.ui.view">
        <field name="name">Informe reembolso socio</field>
        <field name="model">fs.timesheet.report.wizard</field>
        <field name="arch" type="xml">
             <form string="Informe reembolso socio">
                    <header>
                        <button string="Calcular" type="object" name="action_compute" class="btn-primary"/>
                        <button string="Generar Pagos" type="object" class="btn-primary" name="action_generate_payments"/>
                        <button string="Exportar a Excel" type="object" name="action_export_excel"/>
                        <button string="Exportar a PDF" type="object" name="action_export_pdf"/>
                    </header>
          
                <!-- Cabecera: 2 columnas -->
                <group col="2">

                    <!-- IZQUIERDA: recuadro azul (rango de fechas) -->
                    <group string="Período">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>

                    <!-- DERECHA: recuadros rojos (colaboradores + orden de venta) -->
                    <group string="Filtros">
                        <field name="user_ids"
                               widget="many2many_tags"
                               string="Colaboradores"/>
                        <field name="sale_order_id" string="Orden de venta"/>
                    </group>

                </group>

                <separator string="Líneas de reembolso"/>

                <field name="line_ids" nolabel="1"
                       context="{'default_tipo': 'Labor'}">
                    <list string="Detalle de tiempos">
                        <field name="date"/>
                        <field name="fs_sequence"/>
                        <field name="user_id"/>
                        <field name="unit_rate"/>
                        <field name="qty_m2"/>
                        <field name="sale_order_id"/>
                        <field name="product_code"/>
                        <field name="pending_m2" readonly="1"/>
                        <field name="fs_m2_cost"/>
                        <field name="is_paid"/>
                        <field name="task_stage_name"/>
                        <field name="vendor_bill_id"/>
                        <field name="has_report"/> 
                        <button name="action_open_task_images"
                                type="object"
                                icon="fa-eye"/>
                        <button name="action_view_task_report_portal"
                                type="object"
                                icon="fa-file-text-o"
                                title="Ver documento en portal"
                                />
                    </list>
                </field>

                <group>
                    <field name="total_amount" readonly="1"/>
                </group>

            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard desde menú o botón -->
    <record id="action_fs_timesheet_report_wizard" model="ir.actions.act_window">
        <field name="name">Informe reembolso socio</field>
        <field name="res_model">fs.timesheet.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="fs_timesheet_report_wizard_view"/>
        <field name="target">current</field>
    </record>

