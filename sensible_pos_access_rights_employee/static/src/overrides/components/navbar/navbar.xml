<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="sensible_pos_access_rights_employee.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-topheader')]" position="before">
            <t t-set="currentEmployee" t-value="pos.cashier"/>
        </xpath>
        <!-- Hide Install App menu -->
        <xpath expr="//DropdownItem[@onSelected=&quot;() =&gt; window.open(this.appUrl)&quot;]" position="attributes">
            <attribute name="t-if">!isDisplayStandalone and this.pos.cashier._role != 'minimal' and !currentEmployee?.sbl_hide_pos_install_app</attribute>
        </xpath>
        <!-- Hide Cash In/Out menu -->
        <xpath expr="//DropdownItem[contains(@t-if, 'showCashMoveButton')]" position="attributes">
            <attribute name="t-if">showCashMoveButton and this.pos.cashier._role != 'minimal' and !currentEmployee?.sbl_hide_pos_cash_in_out</attribute>
        </xpath>
        <!-- Hide Backend menu -->
        <xpath expr="//DropdownItem[@onSelected='() =&gt; pos.closePos()']" position="attributes">
            <attribute name="t-if">!currentEmployee?.sbl_hide_pos_backend_menu</attribute>
        </xpath>
        <!-- Hide Close Register menu -->
        <xpath expr="//DropdownItem[@onSelected='() =&gt; this.pos.closeSession()']" position="attributes">
            <attribute name="t-if">!currentEmployee?.sbl_hide_pos_close_register</attribute>
        </xpath>
        <!-- Hide Reload Data menu -->
        <xpath expr="//DropdownItem[@onSelected='() =&gt; this.reloadProducts()']" position="attributes">
            <attribute name="t-if">!this.pos.data.network.offline and !currentEmployee?.sbl_hide_pos_reload_data</attribute>
        </xpath>
        <!-- Hide Create Product menu -->
        <xpath expr="//DropdownItem[@onSelected='() =&gt; this.pos.editProduct()']" position="attributes">
            <attribute name="t-if">showCreateProductButton and !currentEmployee?.sbl_hide_pos_create_product</attribute>
        </xpath>
        <xpath expr="//button[hasclass('orders-button')]" position="attributes">
            <attribute name="t-if">!currentEmployee?.sbl_hide_pos_orders_menu</attribute>
        </xpath>
    </t>
</templates>
