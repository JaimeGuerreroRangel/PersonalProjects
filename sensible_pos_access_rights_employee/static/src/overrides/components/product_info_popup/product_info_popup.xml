<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="sensible_pos_access_rights_employee.ProductInfoPopup" t-inherit="point_of_sale.ProductInfoPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('section-supplier')]" position="before">
            <t t-set="currentEmployee" t-value="pos.cashier"/>
        </xpath>
        <xpath expr="//div[hasclass('section-supplier')]" position="attributes">
            <attribute name="t-attf-class">section-supplier mt-3 mb-4 pb-4 text-start {{ currentEmployee.sbl_hide_pos_finance_from_product_info ? '' : 'border-bottom' }}</attribute>
            <attribute name="class"/>
        </xpath>
        <xpath expr="//div[hasclass('financials-order')]" position="attributes">
            <attribute name="t-if">!currentEmployee.sbl_hide_pos_finance_from_product_info</attribute>
        </xpath>
    </t>
</templates>
